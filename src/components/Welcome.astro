---
import astroLogo from '../assets/astro.svg';
---

<div id="container">
	<nav id="navbar">
		<a href="/"><img src={astroLogo.src} alt="Logo" id="logo" /></a>
		<div id="nav-items">
			<a href="/Home" class="nav-item">Home</a>
			<a href="/About" class="nav-item">About</a>
			<a href="/Services" class="nav-item">Services</a>
			<a href="/Portfolio" class="nav-item">Portfolio</a>
			<a href="/Contact" class="nav-item contact">Contact</a>
		</div>
	</nav>
</div>

<style>
	#container {
		font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
		height: 100%;
	}

	#navbar {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 16px;
		background-color: rgba(255, 255, 255, 0.8);
		backdrop-filter: blur(10px);
		position: fixed;
		width: 100%;
		top: 0;
		left: 0;
		z-index: 1000;
	}

	#logo {
		height: 40px;
	}

	#nav-items {
		display: flex;
		gap: 16px;
		justify-content: center;
		flex-grow: 1;
	}

	.nav-item {
		cursor: pointer;
		color: #111827;
		font-weight: bold;
		text-decoration: none;
	}

	.nav-item:hover {
		color: rgb(78, 80, 86);
	}

	.contact {
		margin-left: 32px;
	}

	@media screen and (max-width: 768px) {
		#navbar {
			flex-direction: column;
		}

		#nav-items {
			flex-direction: column;
			align-items: center;
			gap: 8px;
		}

		.contact {
			margin-left: 0;
			margin-top: 8px;
		}
	}
</style>
